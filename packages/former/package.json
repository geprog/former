      "types": "./dist/former/src/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.umd.cjs"
    }
  },
  "main": "./dist/index.umd.cjs",
  "module": "./dist/index.js",
  "types": "./dist/former/src/index.d.ts",
  "files": [
    "README.md",
    "dist"
  ],
  "engines": {
    "pnpm": ">=9.0.0",
    "node": ">=22.0.0"
  },
  "scripts": {

{
  "name": "former-ui",
  "type": "module",
  "version": "0.0.0",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/geprog/former.git"
  },
  "keywords": [
    "vue",
    "vue3",
    "form-builder",
    "forms"
  ],
  "exports": {
    ".": {
      "types": "./dist/former/src/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.umd.cjs"
    }
  },
  "main": "./dist/index.umd.cjs",
  "module": "./dist/index.js",
  "types": "./dist/former/src/index.d.ts",
  "files": [
    "README.md",
    "dist"
  ],
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "prepack": "pnpm build",
    "test": "vitest --pass-with-no-tests",
    "typecheck": "vue-tsc --build --force",
    "release": "pnpm build && npm publish",
    "prerelease": "pnpm version prerelease --preid=next && pnpm release",
    "build:playground": "vite build --config vite.config.playground.ts",
    "preview:playground": "vite preview --config vite.config.playground.ts"
  },
  "peerDependencies": {
    "vue": "^3.0.0"
  },
  "dependencies": {
    "lodash": "^4.17.21"
  },
  "devDependencies": {
    "@tsconfig/node20": "^20.1.4",
    "@types/lodash": "^4.17.7",
    "@types/node": "^20.12.5",
    "@vitejs/plugin-vue": "^5.0.4",
    "@vue/tsconfig": "^0.5.1",
    "@vueuse/core": "^10.9.0",
    "autoprefixer": "^10.4.19",
    "jsdom": "^25.0.0",
    "npm-run-all2": "^6.1.2",
    "postcss": "^8.4.38",
    "tailwindcss": "^3.4.1",
    "typescript": "~5.4.0",
    "vite": "^5.2.8",
    "vite-plugin-css-injected-by-js": "^3.5.0",
    "vite-plugin-dts": "^3.8.0",
    "vitest": "^2.0.5",
    "vue": "^3.4.21",
    "vue-tsc": "^2.0.11"
  }
}

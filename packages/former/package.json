    "@vue/tsconfig": "0.7.0",
    "@vueuse/core": "12.0.0",
    "autoprefixer": "10.4.20",
    "tailwindcss": "3.4.15",
    "typescript": "5.7.2",
    "vite": "6.0.1",
    "vite-plugin-css-injected-by-js": "3.5.2",

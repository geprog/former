{
  "compilerOptions": {
    "composite": true,
    "target": "ES2020",
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "rootDir": "src",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "strict": true,
    "declaration": true,
    "emitDeclarationOnly": false,
    "outDir": "dist",
    "skipLibCheck": true,
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": ["src/**/*.ts", "src/**/*.vue"]
}

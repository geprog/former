{
  "compilerOptions": {
    "composite": true,
    "target": "ES2020",
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "rootDir": "src",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "paths": { "@/*": ["./src/*"] },
    "strict": true,
    "declaration": true,
    "emitDeclarationOnly": false,
    "outDir": "dist",

    "skipLibCheck": true
  },
  "include": ["src/**/*.ts", "src/**/*.vue", "src/env.d.ts"]
}
